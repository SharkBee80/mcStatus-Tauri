{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "os:default",
    "fs:default",
    "fs:allow-appdata-read",
    "fs:allow-appdata-write",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$DOWNLOAD/**"
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*/*"
        },
        {
          "url": "http://*/*"
        },
        {
          "url": "tcp://*/*"
        },
        {
          "url": "udp://*/*"
        }
      ]
    },
    "mc-status:default"
  ]
}